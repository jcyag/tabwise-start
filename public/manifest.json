
{
  "manifest_version": 3,
  "name": "Elegant New Tab",
  "version": "1.0",
  "description": "A beautiful new tab page with a search bar, recent history, and bookmark management.",
  "permissions": [
    "tabs",
    "bookmarks",
    "history",
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "action": {
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    },
    "default_title": "Elegant New Tab"
  },
  "background": {
    "service_worker": "background.js"
  }
}
